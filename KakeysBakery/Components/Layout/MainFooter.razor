@using BlazorBootstrap


<Modal @ref="PhoneModal" Title="Phone Information">
    <BodyTemplate>
        <p>You can call or text me between 9am - 4pm at 555-555-5555 </p>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="async () => { await PhoneModal.HideAsync(); }">Close</Button>
    </FooterTemplate>
</Modal>

<Modal @ref="EmailModal" Title="Email Information">
    <BodyTemplate>
        <p>You can reach me at ____ and I will get back to you within 1-2 buisness days</p>
        </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="async () => { await EmailModal.HideAsync(); }">Close</Button>
    </FooterTemplate>
</Modal>

<footer class="footer mt-auto py-4 d-flex justify-content-center layout" data-bs-theme="dark">
    <div class="container d-flex align-items-center justify-content-center">
        <div class="col-md-4 d-flex align-items-center">
            <span class="d-flex align-items-center justify-content-center text-body-secondary">© 2024 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex ps-5 pe-lg-5">
            <li class="ms-lg-3"><a class="text-body-secondary" href="https://m.facebook.com/people/Kakeys-Bakery/100092969621403/"><i class="bi bi-facebook" /></a></li>
            @* <li class="ms-lg-3"><a class="text-body-secondary" href="#"><i class="bi bi-instagram" /></a></li> *@
            @* <li class="ms-lg-3"><a class="text-body-secondary" href="#"><i class="bi bi-twitter" /></a></li> *@
            <li class="ms-lg-3"><a class="text-body-secondary" href="#"><i class="bi bi-envelope-at" @onclick="EmailModal.ShowAsync" /></a></li>
            <li class="ms-lg-3"><a class="text-body-secondary" href="#"><i class="bi bi-telephone" @onclick="PhoneModal.ShowAsync" /></a></li>
        </ul>
    </div>
</footer>

@code {
    Modal PhoneModal = new();
    Modal EmailModal = new();
}